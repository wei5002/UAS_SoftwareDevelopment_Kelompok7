generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Pelanggan {
  id       String  @id @default(auto()) @map("_id") @db.ObjectId
  nama     String
  password String
  email    String  @unique
  token    String?
}

model Admin {
  id       String  @id @default(auto()) @map("_id") @db.ObjectId
  username String  @unique
  password String
  token    String?
}

model Produk {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  namaProduk      String
  deskripsi String?
  harga     Float    @default(0.0)
  stok      Int      @default(0)
  thickness Float?   @default(0)
  hole      Float?   @default(0)
  size      String?
  gambar    String
}
